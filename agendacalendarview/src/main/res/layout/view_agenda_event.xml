<?xml version="1.0" encoding="utf-8"?>
<com.github.tibolte.agendacalendarview.agenda.AgendaEventView
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/view_agenda_event_left"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/view_agenda_event_from"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_horizontal"
            android:text="10:00"
            android:textColor="@color/theme_event_confirmed"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_agenda_event_to"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_horizontal"
            android:text="15:00"
            android:textColor="@color/theme_event_confirmed"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Description -->
    <LinearLayout
            android:id="@+id/view_agenda_event_description_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

        <TextView
                android:id="@+id/view_agenda_event_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/blue_selected"
                android:textSize="16dp"/>

        <LinearLayout
                android:id="@+id/view_agenda_event_location_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_location"/>

            <TextView
                    android:id="@+id/view_agenda_event_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/calendar_text_default"
                    android:textSize="11dp"/>

        </LinearLayout>

    </LinearLayout>

</com.github.tibolte.agendacalendarview.agenda.AgendaEventView>